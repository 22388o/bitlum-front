{
  "name": "__MSG_appName__",
  "short_name": "__MSG_appName__",
  "version": "0.0.2",
  "manifest_version": 2,
  "author": "https://bitlum.io",
  "description": "__MSG_appDescription__",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+B",
        "mac": "Alt+Shift+B",
        "chromeos": "Alt+Shift+B",
        "linux": "Alt+Shift+B"
      }
    }
  },
  "applications": {
    "gecko": {
      "id": "webextension@bitlum.io"
    }
  },
  "default_locale": "en",
  "browser_action": {
    "default_title": "Bitlum",
    "default_popup": "index.html"
  },
  "icons": { "16": "assets/icon16.png", "48": "assets/icon48.png", "128": "assets/icon128.png" },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "permissions": [
    "cookies",
    "storage",
    "unlimitedStorage",
    "notifications",
    "http://*/*",
    "https://*/*",
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "clipboardRead"
  ],
  "web_accessible_resources": ["inpage.js", "phishing.html", "index.html", "assets/*"],
  "externally_connectable": {
    "matches": ["https://*.bitlum.io/*"],
    "ids": ["*"]
  },
  "content_security_policy": "script-src 'self' 'sha256-GgRxrVOKNdB4LrRsVPDSbzvfdV4UqglmviH9GoBJ5jk=' https://*.intercomcdn.com https://www.google-analytics.com/ https://mc.yandex.ru/ https://*.intercom.io; object-src 'self';img-src * 'self' data:; style-src * 'unsafe-inline';"
}
